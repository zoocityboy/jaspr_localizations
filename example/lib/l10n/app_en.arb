{
  "@@locale": "en",
  "@@context": "Application localization for Jaspr framework example",
  "@@author": "Jaspr Localization Team",
  "@@comment": "English translations for the Jaspr localization example application",
  
  "appTitle": "My Application",
  "@appTitle": {
    "description": "The title of the application displayed in the header",
    "context": "ui:header"
  },
  
  "welcomeMessage": "Welcome to {appName}!",
  "@welcomeMessage": {
    "description": "Welcome message shown to users when they open the application",
    "context": "ui:greeting",
    "placeholders": {
      "appName": {
        "type": "String",
        "example": "My App",
        "description": "The name of the application"
      }
    }
  },
  
  "itemCount": "{count, plural, =0{No items} =1{One item} other{{count} items}}",
  "@itemCount": {
    "description": "Shows the number of items with proper plural support",
    "context": "ui:status",
    "placeholders": {
      "count": {
        "type": "int",
        "example": "5",
        "description": "The number of items to display"
      }
    }
  },
  
  "loginButton": "Login",
  "@loginButton": {
    "description": "Text for the login button",
    "context": "ui:button:auth"
  },
  
  "logoutButton": "Logout", 
  "@logoutButton": {
    "description": "Text for the logout button",
    "context": "ui:button:auth"
  },
  
  "currentLocale": "Current Locale: {locale}",
  "@currentLocale": {
    "description": "Displays the current locale setting",
    "context": "ui:settings",
    "placeholders": {
      "locale": {
        "type": "String",
        "example": "en-US",
        "description": "The current locale code"
      }
    }
  },
  
  "genderMessage": "{gender, select, male{He likes Flutter} female{She likes Flutter} other{They like Flutter}}",
  "@genderMessage": {
    "description": "Gender-specific message demonstrating ICU select format",
    "context": "example:icu",
    "placeholders": {
      "gender": {
        "type": "String",
        "example": "male",
        "description": "The gender selection for the message"
      }
    }
  },
  
  "priceDisplay": "Price: {amount}",
  "@priceDisplay": {
    "description": "Display price with currency formatting",
    "context": "ui:commerce",
    "placeholders": {
      "amount": {
        "type": "num",
        "example": "$123.45",
        "format": "currency",
        
        "description": "The formatted price amount to display"
      }
    }
  },
  
  "downloadCount": "Downloads: {count}",
  "@downloadCount": {
    "description": "Display download count with number formatting",
    "context": "ui:stats",
    "placeholders": {
      "count": {
        "type": "String", 
        "example": "1,234",
        "description": "The formatted number of downloads"
      }
    }
  },
  
  "percentageValue": "Progress: {value}%",
  "@percentageValue": {
    "description": "Display percentage value with proper formatting",
    "context": "ui:progress",
    "placeholders": {
      "value": {
        "type": "num",
        "example": "75",
        "description": "The percentage value as a formatted string"
      }
    }
  },
  
  "salesReport": "Sales: {amount} ({count} units) - {percent}% growth",
  "@salesReport": {
    "description": "Complex sales report with multiple formatting types",
    "context": "ui:reporting",
    "placeholders": {
      "amount": {
        "type": "num",
        "example": "$15,000.50",
        "format": "simpleCurrency",
        "description": "The formatted total sales amount"
      },
      "count": {
        "type": "num",
        "example": "2,500",
        "format": "simpleCurrency",
        "description": "The formatted number of units sold"
      },
      "percent": {
        "type": "num",
        "example": "15",
        
        "description": "The formatted growth percentage"
      }
    }
  },
  
  "lastUpdated": "Last updated: {date}",
  "@lastUpdated": {
    "description": "Shows when the data was last updated",
    "context": "ui:timestamp",
    "placeholders": {
      "date": {
        "type": "DateTime",
        "format": "yMd",
        "example": "2023-10-15",
        "description": "The formatted last update date"
      }
    }
  },
  
  "timeRemaining": "Time remaining: {time}",
  "@timeRemaining": {
    "description": "Display remaining time in hours and minutes",
    "context": "ui:timer",
    "placeholders": {
      "time": {
        "type": "DateTime",
        "format": "Hm",
        "example": "2023-10-15T14:30:00Z",
        "description": "Time remaining"
      }
    }
  }
}
